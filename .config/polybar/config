[colors]
;background = ${xrdb:color0:#222}
background = #23272a
background-alt = #2c2f33
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #7298da
secondary = #e60053
alert = #bd2c40
icons = #ffffff

[bar/example]
width = 100%
height = 25
bottom = true
radius = 0
background = ${colors.background}
foreground = ${colors.foreground}
modules-left = date sep xwindow
modules-center = i3
tray-position = right
wm-restack = i3
override-redirect = false

font-0 = "Roboto:size=9:1"
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1
font-3 = "Material Icons:style=regular:size=8;1"

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true
strip-wsnumbers = true
pin-workspaces = true

label-mode-padding = 5

label-unfocused-foreground = #10aded
label-unfocused-padding = 1
label-visible-foregroud = #15a17ed
label-visible-padding = 1
label-focused-foreground = #1ce
label-focused-padding = 1
label-urgent-padding = 1

[module/sep]
type = custom/text
content = "|"

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
label-padding = 3

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.icons}
format-underline = #f90000
label = "cpu - %percentage:2%%"

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.icons}
format-underline = #4bffdc
label = "mem - %percentage_used%%"

[module/date]
type = internal/date
interval = 5

time = %I:%M %p
time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5

label = %time%
label-padding = 3

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = " <label-charging>"
format-charging-underline = #ffb52a

format-discharging = "  <label-discharging>"
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = ""
format-full-prefix-foreground = ${colors.icons}
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-foreground = ${colors.icons}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = ${colors.icons}
animation-charging-framerate = 750

[module/spotify]
type = custom/script
exec = ~/.local/bin/sp %artist% - %title%
tail = true
interval = 2

[module/space]
type = custom/text
label-active-font = 0
content = " "

[module/plps]
type = custom/text
label-active-font = 3
content = "%{F#fff} %{A1:playerctl -p spotify play-pause:}   %{A}%{F-}"

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

